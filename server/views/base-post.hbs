<!--大队管理页面-->
<!--main content start-->
<section id="main-content">
    <section class="wrapper">
        <!-- page start-->
        <div class="row">
            <aside class="profile-nav col-lg-2">
                <section class="panel">

                    <ul class="nav nav-pills nav-stacked">
                        <li><a href="/base-dd"> <i class="fa fa-th-large"></i> 大队管理</a></li>
                        <li><a href="/base-zd"> <i class="fa fa-th"></i> 中队管理 </a></li>
                        <li  class="active"><a href="/base-post"> <i class="fa fa-address-book"></i> 岗位管理</a></li>
                        <li><a href="/base-police"> <i class="fa fa-group"></i> 警员管理</a></li>
                    </ul>

                </section>
            </aside>
            <aside class="profile-info col-lg-10">
                <header>
                    <ul class="nav nav-tabs" id="ul_daduis">
                    </ul>
                </header>
                <section class="tab-container">
                    <!-- page start-->
                    <div class="tab-content" id="tab_zhongdui">
                    </div>
                </section>

            </aside>
        </div>

        <!-- page end-->
    </section>
</section>

<!--main content end-->
{{#section 'js'}}
    <script src="javascripts/base-post.js"></script>
    <script id="ul_daduis_template" type="text/x-handlebars-template">
        \{{#if daduis}}
            \{{#each daduis}}
                \{{#if @first}}
                           <li class="active" ><a data-toggle="tab" onclick="tab_dataInit(this)"  href="#id_dadui_\{{id}}">\{{name}}</a></li>
                \{{else}}
                          <li><a data-toggle="tab" onclick="tab_dataInit(this)" href="#id_dadui_\{{id}}">\{{name}}</a></li>
                \{{/if}}

             \{{/each}}
        \{{else}}
                <i class="fa fa-info-circle">无数据</i>
        \{{/if}}
    </script>
    <script id="tab_zhongdui_template" type="text/x-handlebars-template">
        \{{#each daduis}}
        \{{#if @first}}
        <div class="tab-pane active" id="id_dadui_\{{id}}"></div>
        \{{else}}
        <div class="tab-pane" id="id_dadui_\{{id}}"></div>
        \{{/if}}
        \{{/each}}
    </script>
    <script id="block_zhongdui_template" type="text/x-handlebars-template">
        \{{#each zhongduis}}
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                        <b>\{{zhongdui_name}}</b>
                    </header>
                    <div class="panel-body">
                        \{{#each data}}
                        <section class="panel   col-lg-6">
                            <div class="post-bg">
                                <div class="panel-body">
                                    <div class="row">
                                        <div class="col-xs-9">
                                            \{{name}} \{{star type}}
                                        </div>
                                        <div class="col-xs-3">
                                            <i class="fa fa-volume-control-phone" title="呼号">&nbsp;\{{callnumber}}</i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="profile-nav alt green-border">
                            <ul class="nav nav-pills nav-stacked">
                                \{{work worktime}}
                                <li title="高峰点"><a> <i class="fa fa-industry"></i>&nbsp;\{{peakpoint}}</a></li>
                                <li title="高峰时间"><a> <i class="fa fa-warning"></i>&nbsp;\{{peaktime}}</a></li>
                                <li title="工歇时间"><a> <i class="fa fa-coffee"></i>工歇&nbsp;\{{resttime}}</a></li>
                                <li title="就餐时间"><a> <i class="fa fa-cutlery"></i>&nbsp;就餐&nbsp;\{{mealtime}}</a></li>
                                <li title="责任区"><a> <i class="fa fa-area-chart"></i>&nbsp;\{{responsiblearea}}</a></li>
                                <li title="巡线"><a> <i class="fa fa-line-chart"></i>&nbsp;\{{patrolline}}</a></li>
                            </ul>
                            </div>

                        </section>
                        \{{/each}}
                    </div>
                </section>
            </div>
        </div>
        \{{/each}}
    </script>

{{/section}}

