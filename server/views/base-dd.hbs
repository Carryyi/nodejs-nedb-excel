<!--大队管理页面-->
<!--main content start-->
<section id="main-content">
    <section class="wrapper">
        <!-- page start-->
        <div class="row">
            <aside class="profile-nav col-lg-2">
                <section class="panel">

                    <ul class="nav nav-pills nav-stacked">
                        <li class="active"><a href="/base-dd"> <i class="fa fa-th-large"></i> 大队管理</a></li>
                        <li><a href="/base-zd"> <i class="fa fa-th"></i> 中队管理 </a></li>
                        <li><a href="/base-post"> <i class="fa fa-address-book"></i> 岗位管理</a></li>
                        <li><a href="/base-police"> <i class="fa fa-group"></i> 警员管理</a></li>
                    </ul>

                </section>
            </aside>
            <aside class="profile-info col-lg-10">
                <section class="panel">
                    <div class="panel-body bio-graph-info">
                            <h1 class="drg-event-title">大队信息管理</h1>
                        <div id="toolbar" style="margin: 10px">
                            <section class="panel">
                                <div class="panel-body">
                                    <form class="form-inline">
                                        <div class="form-group">
                                            <button id="remove" class="btn btn-danger" disabled>
                                                <i class="glyphicon glyphicon-trash"></i> 删除
                                            </button>
                                        </div>

                                        <div class="form-group">
                                            <a id="add" class="btn btn-success" data-toggle="modal" href="#modal_new">
                                                <i class="glyphicon glyphicon-plus"></i> 新建
                                            </a>
                                        </div>
                                        <div class="form-group">
                                            <a id="cancel" class="btn btn-warning" style="display:none">
                                                <i class="icon icon-remove-circle">取消</i>
                                            </a>
                                        </div>
                                    </form>
                                </div>
                            </section>
                        </div>
                            <section class="panel">
                                <table id="daduiTable"></table>
                            </section>
                    </div>
                </section>

            </aside>
        </div>

        <!-- page end-->
    </section>
</section>


<div aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1" id="modal_new" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button aria-hidden="true" data-dismiss="modal" class="close" type="button">×</button>
                <h4 class="modal-title"><i class="glyphicon glyphicon-new-window"><span id="editname"></span></i>&nbsp;&nbsp;&nbsp;新建大队</h4>
            </div>
            <div class="modal-body">

                <form class="form-horizontal" role="form">
                    <div class="form-group">
                        <label class="col-lg-2 control-label">大队名称</label>
                        <div class="col-lg-10">
                            <input type="text" class="form-control" id="new_name" placeholder="大队名称">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">责任区域</label>
                        <div class="col-lg-10">
                            <textarea rows="6" class="form-control" id="new_responsiblearea" placeholder="责任区域描述"></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <a  id="submit_newDadui"  class="btn btn-info"><i class="glyphicon glyphicon-ok"></i>&nbsp;提交</a>
                            <span class="remind"></span>
                        </div>
                    </div>
                </form>

            </div>

        </div>
    </div>
</div>
{{#section 'css'}}
    <link rel="stylesheet" href="stylesheets/select2-bootstrap.css" media="screen">
    <link rel="stylesheet" href="stylesheets/select2.css" media="screen">
    <link rel="stylesheet" href="stylesheets/bootstrap-table.css" media="screen">
    <link rel="stylesheet" href="stylesheets/bootstrap-editable.css" media="screen">
{{/section}}
<!--main content end-->
{{#section 'js'}}
    <script src="javascripts/base-dd.js"></script>
{{/section}}

